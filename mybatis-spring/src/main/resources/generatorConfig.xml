<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <classPathEntry location="WEB-INF/lib"/>

    <context id="Tables" targetRuntime="MyBatis3" defaultModelType="conditional">
        <jdbcConnection driverClass="${jdbc.driverClassName}"
                        connectionURL="${jdbc.url}"
                        userId="${jdbc.username}"
                        password="${jdbc.password}">
        </jdbcConnection>

        <javaTypeResolver>
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>

        <javaModelGenerator targetPackage="com.hello.model" targetProject="/Users/peker/IdeaProjects/hello-world/mybatis-spring/src/main/java">
            <property name="enableSubPackages" value="true"/>
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>

        <sqlMapGenerator targetPackage="com.hello.mapper" targetProject="/Users/peker/IdeaProjects/hello-world/mybatis-spring/src/main/java">
            <property name="enableSubPackages" value="true"/>
        </sqlMapGenerator>

        <javaClientGenerator type="XMLMAPPER" targetPackage="com.hello.dao" targetProject="/Users/peker/IdeaProjects/hello-world/mybatis-spring/src/main/java">
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>

        <table schema="hello_world" tableName="*">
            <property name="useActualColumnNames" value="true"/>
            <generatedKey column="ID" sqlStatement="JDBC" identity="true"/>
        </table>

    </context>
</generatorConfiguration>